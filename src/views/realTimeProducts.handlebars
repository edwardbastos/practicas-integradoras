<div class="form-container">
  <form action="./api/products" method="POST" id="formProducts" class="formProducts">
    <h2 class="subtitle">Registro de productos</h2>
    <label class="label" for="title">Nombre</label>
    <input class="controls" type="text" name="title" id="title" placeholder="Nombre" required>
    <label class="label" for="description">Descripción</label>
    <input class="controls" type="text" name="description" id="description" placeholder="Descripción" required>
    <label class="label" for="category">Categoría</label>
    <input class="controls" type="text" name="category" id="category" placeholder="Categoría" required>
    <label class="label" for="code">Código</label>
    <input class="controls" type="text" name="code" id="code" placeholder="Código" required>
    <label class="label" for="stock">Stock</label>
    <input class="controls" type="number" name="stock" id="stock" placeholder="0" required>
    <label class="label" for="price">Precio $</label>
    <input class="controls" type="number" step="0.01" name="price" id="price" placeholder="00.00" required>
    <label class="label" for="thumbnail">Imagen: URL</label>
    <input class="controls" type="url" name="thumbnail" id="thumbnail" placeholder="https://imagen.jpg">
    <button class="btn btn-add" id="add-btn" type="submit">Registrar</button>
  </form>

  <form class="delete-form" action="./api/products" method="POST">
    <h2 class="subtitle">Eliminar producto</h2>
    <label class="label" for="pid">ID del producto</label>
    <input class="controls" type="number" name="pid" id="pid" placeholder="ID del producto">
    <button class="btn btn-delete" id="delete-btn" type="button">Eliminar</button>
  </form>
</div>

<div class="container" id="container"></div>